{
  "name": "quick-run-debug-buttons",
  "displayName": "Quick Run and Debug Buttons",
  "description": "Quick Run and Debug Buttons",
  "publisher": "MaikkunDev",
  "repository": {
    "type": "git",
    "url": "https://github.com/maikkundev/Quick-Run-and-Debug-Buttons.git"
  },
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "icon": "./icons/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "quick-run-debug-buttons.debug",
        "title": "QRD: Debug",
        "icon": "$(debug)"
      },
      {
        "command": "quick-run-debug-buttons.run",
        "title": "QRD: Run",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "quick-run-debug-buttons.debug",
          "group": "navigation"
        },
        {
          "command": "quick-run-debug-buttons.run",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.15.18",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.27.0",
    "glob": "^11.0.2",
    "mocha": "^11.3.0",
    "typescript": "^5.8.3"
  }
}
